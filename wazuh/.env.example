# OpenAEV Configuration
OPENAEV_URL=https://openaev.example.com
OPENAEV_TOKEN=your-openaev-api-token-here

# Collector Configuration
COLLECTOR_ID=wazuh-collector-001
COLLECTOR_NAME=Wazuh
COLLECTOR_TYPE=wazuh
COLLECTOR_PLATFORM=SIEM
COLLECTOR_PERIOD=60
COLLECTOR_MIN_RULE_LEVEL=3
COLLECTOR_VERBOSE=false

# Indexer Configuration (Wazuh data store - OpenSearch/Elasticsearch)
INDEXER_HOST=wazuh.example.com
INDEXER_PORT=9200
INDEXER_USERNAME=admin
INDEXER_PASSWORD=your-indexer-password-here
INDEXER_USE_SSL=true
INDEXER_VERIFY_CERTS=false
INDEXER_CA_CERTS=
INDEXER_INDEX_PATTERN=wazuh-alerts-*
INDEXER_ALERT_LIMIT=10000

# Dashboard Configuration (for alert links in OpenAEV)
DASHBOARD_URL=https://wazuh.example.com
